{
  "name": "zap-rs",
  "version": "2.0.0",
  "description": "Ultra-fast HTTP framework written in Rust with TypeScript bindings - IPC-based architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build:rust": "cargo build --release --bin zap",
    "build:ts": "tsc",
    "build": "npm run build:rust && npm run build:ts",
    "dev": "bun run src/index.ts",
    "test": "cargo test && bun test tests/",
    "test:integration": "bun test tests/integration/",
    "test:unit": "bun test tests/unit/",
    "lint": "bun run tsc --noEmit",
    "format": "prettier --write src/ server/src/",
    "stress-test": "bun run stress-test.ts",
    "stress-test:quick": "bun run stress-test.ts --quick",
    "install-deps": "bun install",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rust",
    "http",
    "framework",
    "typescript",
    "performance",
    "web-server",
    "fast",
    "ipc",
    "bun"
  ],
  "author": "saint0x",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saint0x/zap-rs.git"
  },
  "bugs": {
    "url": "https://github.com/saint0x/zap-rs/issues"
  },
  "homepage": "https://github.com/saint0x/zap-rs#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "zap-rs": "^1.1.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  }
}